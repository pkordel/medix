<div id="<%= dom_id profile %>" class="mb-5 max-w-sm rounded overflow-hidden bg-gray-100 shadow-lg">
  <div class="px-6 py-4">
    <div class="font-bold text-xl mb-2"><%= profile.full_name %></div>
    <p class="text-gray-700 text-base"><%= profile.title %></p>
    <% profile.specializations.each do |special| %>
    <p class="text-gray-700 italic text-base"><%= special["name"] %></p>
    <% end %>
  </div>
  <div class="px-6 pt-4 pb-2">
  <% if profile.approved? %>
    <span class="inline-block bg-green-400 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2"><%= t("profile.approved") %></span>
  <% else %>
    <span class="inline-block bg-red-400 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2"><%= t("profile.denied") %></span>
  <% end %>
  <% profile.clinics.each do |clinic| %>    
    <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2"><%= clinic.name %></span>
  <% end %>
  </div>
</div>
